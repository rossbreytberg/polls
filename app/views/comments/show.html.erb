<% provide(:title, @comment.content) %>

<div class="comment">
  <p>
    <%= @comment.content %>
  </p>
  <span class="subtitle">
    Posted <%= time_ago_in_words(@comment.created_at) %> ago by <%= link_to @comment.user.name, @comment.user %> in <%= link_to @comment.poll.question, @comment.poll, rel: "poll" %>
    <% if signed_in? && current_user.id == @comment.user.id %>
       | <%= link_to "Delete Comment", comment, method: :delete, data: { confirm: "Are you sure you want to delete this comment?" } %>
    <% end %>
  </span>
</div>
