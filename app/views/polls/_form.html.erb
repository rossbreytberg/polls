<%= form_for(@poll) do |f| %>

  <% if @poll.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@poll.errors.count, "error") %> prohibited this poll from being saved:</h2>

      <ul>
      <% @poll.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.text_field :question, placeholder: "Question" %>
  <%= f.text_area :content, placeholder: "Description" %>
  <%= f.fields_for :poll_options do |builder| %>
    <fieldset class="poll_option">
      <legend>Option</legend>
        <%= builder.text_field :label, placeholder: "Label" %>
        <%= builder.text_field :color, placeholder: "Color (hex)" %>
    </fieldset>
  <% end %>
    <%= button_tag "+", class: "link_to_add_poll_option" %>
    <%= button_tag "-", class: "delete_button link_to_remove_poll_option" %>
    <%= f.submit %>
<% end %>
