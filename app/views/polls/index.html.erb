<ol class="poll_index">
  <% @polls.each do |poll| %>
    <li>
      <span class="subtitled_title poll_title">
        <%= link_to poll.question, poll %>
      </span>
      <span class="subtitle">
        Asked <%= time_ago_in_words(poll.created_at) %> ago by <%= link_to poll.user.name, poll.user, rel: "author" %>
      </span>
    </li>
  <% end %>
</ol>

<% if signed_in? %>
  <%= button_to "New Poll", new_poll_path, { class: "new_poll_button", method: "get" } %>
<% end %>
